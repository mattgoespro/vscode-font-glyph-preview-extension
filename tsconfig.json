{
  "exclude": ["**/node_modules/**"],
  "include": ["src"],
  "compilerOptions": {
    "module": "commonjs",
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": ".",
    "lib": ["dom", "es2020"],
    "outDir": "dist",
    "target": "es2020",
    "types": ["node", "react"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  }
}
